      ]
    },
    {
      "title": "Request Rate (all services)",
      "description": "Polyglot: Java(Micrometer) + NestJS(OTel) + Python(prometheus_client)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (job) (\n  rate(http_server_requests_seconds_count[5m])\n  or rate(http_server_duration_milliseconds_count[5m])\n  or rate(http_requests_total[5m])\n)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Rate (all services)",
      "description": "5xx error rate across all polyglot services",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.01 }, { "color": "red", "value": 0.05 }] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "(\n  sum by (job) (rate(http_server_requests_seconds_count{status=~\"5..\"}[5m]))\n  / sum by (job) (rate(http_server_requests_seconds_count[5m]))\n)\nor\n(\n  sum by (job) (rate(http_server_duration_milliseconds_count{http_status_code=~\"5..\"}[5m]))\n  / sum by (job) (rate(http_server_duration_milliseconds_count[5m]))\n)\nor\n(\n  sum by (job) (rate(http_requests_total{status=~\"5..\"}[5m]))\n  / sum by (job) (rate(http_requests_total[5m]))\n)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "P95 Latency (all services)",
      "description": "NestJS metrics in ms are divided by 1000 for seconds normalization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.2 }, { "color": "red", "value": 0.5 }] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, job) (rate(http_server_requests_seconds_bucket[5m])))\nor\nhistogram_quantile(0.95, sum by (le, job) (rate(http_server_duration_milliseconds_bucket[5m]))) / 1000\nor\nhistogram_quantile(0.95, sum by (le, job) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Availability SLI (target: 99.95%)",
      "description": "Non-5xx responses / total responses",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit", "min": 0.99, "max": 1,
