{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "prism.task.completed",
  "title": "PrismTaskCompletedEvent",
  "description": "Prism AI task completed event. Published by prism-service, consumed by notification-service.",
  "type": "object",
  "required": ["taskId", "boardId", "userId", "title", "status", "timestamp"],
  "additionalProperties": false,
  "properties": {
    "taskId": {
      "type": "integer",
      "description": "Task identifier"
    },
    "boardId": {
      "type": "integer",
      "description": "Board identifier the task belongs to"
    },
    "userId": {
      "type": "string",
      "description": "User who initiated the task"
    },
    "title": {
      "type": "string",
      "description": "Task title"
    },
    "status": {
      "type": "string",
      "enum": ["TODO", "IN_PROGRESS", "IN_REVIEW", "DONE", "CANCELLED"],
      "description": "Task status after completion"
    },
    "agentName": {
      "type": ["string", "null"],
      "description": "AI agent name that executed the task"
    },
    "executionId": {
      "type": ["integer", "null"],
      "description": "Execution record identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in ISO 8601 format"
    }
  }
}
