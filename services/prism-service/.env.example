# Prism Service Environment Configuration
# Copy to .env.local, .env.docker, or .env.k8s
# NODE_ENV determines which file is loaded: local | docker | k8s

# Server
NODE_ENV=local
PORT=8085

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_username
DB_PASSWORD=your_password
DB_DATABASE=prism_db

# Encryption (AES-256-GCM, min 32 bytes)
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=generate-with-openssl-rand-base64-32

# Kafka
KAFKA_BROKERS=localhost:9092

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS (standalone dev only)
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:30000,http://localhost:30003

# Observability (ADR-033)
# OTEL_TRACES_EXPORTER: none (default, no tracing) | zipkin (enable tracing)
OTEL_TRACES_EXPORTER=none
OTEL_EXPORTER_ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans
