{
  "name": "@portal/design-system",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/design-system.css"
  },
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --declaration --emitDeclarationOnly --outDir dist && vite build && npm run build:tokens",
    "build:tokens": "node scripts/build-tokens.js",
    "preview": "vite preview --port 30003 --strictPort"
  },
  "dependencies": {
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "@types/node": "^24.8.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.0.7"
  }
}