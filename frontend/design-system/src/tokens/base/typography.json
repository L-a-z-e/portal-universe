{
  "typography": {
    "fontFamily": {
      "sans": {
        "$value": "-apple-system, BlinkMacSystemFont, 'Pretendard Variable', 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans KR', sans-serif",
        "$type": "fontFamily",
        "$description": "System font stack optimized for Korean and English"
      },
      "mono": {
        "$value": "'JetBrains Mono', 'Fira Code', 'SF Mono', Consolas, 'Courier New', monospace",
        "$type": "fontFamily",
        "$description": "Monospace for code blocks"
      },
      "serif": {
