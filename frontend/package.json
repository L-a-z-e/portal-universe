{
  "name": "portal-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Portal Universe - Micro Frontend Architecture",

  "workspaces": [
    "design-tokens",
    "design-types",
    "design-system-vue",
    "design-system-react",
    "portal-shell",
    "blog-frontend",
    "shopping-frontend"
  ],

  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:tokens": "npm run build -w design-tokens",

    "dev:design": "npm run dev -w design-system-vue",
    "build:design": "npm run build -w design-system-vue",

    "dev:design-react": "npm run dev -w design-system-react",
    "build:design-react": "npm run build -w design-system-react",

    "dev:portal": "npm run dev -w portal-shell",
    "build:portal": "npm run build -w portal-shell",

    "dev:blog": "npm run dev -w blog-frontend",
    "build:blog": "npm run build -w blog-frontend",
    "build:blog:dev": "npm run build:dev -w blog-frontend",
    "build:blog:docker": "npm run build:docker -w blog-frontend",
    "build:blog:k8s": "npm run build:k8s -w blog-frontend",

    "dev:shopping": "npm run dev -w shopping-frontend",
    "build:shopping": "npm run build -w shopping-frontend",
    "build:shopping:dev": "npm run build:dev -w shopping-frontend",
    "build:shopping:docker": "npm run build:docker -w shopping-frontend",
    "build:shopping:k8s": "npm run build:k8s -w shopping-frontend",

    "storybook": "npm run storybook -w design-system-vue",
    "storybook:react": "npm run storybook -w design-system-react",
    "build-storybook": "npm run build-storybook -w design-system-vue",

    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces 2>/dev/null || true"
  },

  "devDependencies": {
    "@storybook/addon-docs": "^9.1.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "playwright": "^1.56.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.17"
  }
}
