{
  "name": "portal-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Portal Universe - Micro Frontend Architecture",
  "workspaces": [
    "design-tokens",
    "design-types",
    "design-system-vue",
    "design-system-react",
    "portal-shell",
    "blog-frontend",
    "shopping-frontend",
    "prism-frontend"
  ],
  "scripts": {
    "===== 개발 서버 =====": "",
    "dev": "npm run dev --workspaces --if-present",
    "dev:portal": "npm run dev -w portal-shell",
    "dev:blog": "npm run dev -w blog-frontend",
    "dev:shopping": "npm run dev -w shopping-frontend",
    "dev:prism": "npm run dev -w prism-frontend",
    "dev:design": "npm run dev -w design-system-vue",
    "dev:design-react": "npm run dev -w design-system-react",
    "===== 개별 빌드 =====": "",
    "build:tokens": "npm run build -w design-tokens",
    "build:types": "npm run build -w design-types",
    "build:vue": "npm run build -w design-system-vue",
    "build:react": "npm run build -w design-system-react",
    "===== 디자인 시스템 통합 =====": "",
    "build:design": "npm run build:tokens && npm run build:types && npm run build:vue && npm run build:react",
    "===== 앱 빌드 =====": "",
    "build:shell": "npm run build -w portal-shell",
    "build:blog": "npm run build -w blog-frontend",
    "build:shopping": "npm run build -w shopping-frontend",
    "build:prism": "npm run build -w prism-frontend",
    "build:apps": "npm run build:shell && npm run build:blog && npm run build:shopping && npm run build:prism",
    "build:apps:dev": "npm run build:dev -w portal-shell && npm run build:dev -w blog-frontend && npm run build:dev -w shopping-frontend && npm run build:dev -w prism-frontend",
    "===== 환경별 앱 빌드 =====": "",
    "build:blog:dev": "npm run build:dev -w blog-frontend",
    "build:blog:docker": "npm run build:docker -w blog-frontend",
    "build:blog:k8s": "npm run build:k8s -w blog-frontend",
    "build:shopping:dev": "npm run build:dev -w shopping-frontend",
    "build:shopping:docker": "npm run build:docker -w shopping-frontend",
    "build:shopping:k8s": "npm run build:k8s -w shopping-frontend",
    "build:prism:dev": "npm run build:dev -w prism-frontend",
    "build:prism:docker": "npm run build:docker -w prism-frontend",
    "build:prism:k8s": "npm run build:k8s -w prism-frontend",
    "===== 전체 빌드 =====": "",
    "build": "npm run build:design && npm run build:apps",
    "build:all:dev": "npm run build:design && npm run build:apps:dev",
    "===== Storybook =====": "",
    "storybook": "npm run storybook -w design-system-vue",
    "storybook:react": "npm run storybook -w design-system-react",
    "build-storybook": "npm run build-storybook -w design-system-vue",
    "===== 테스트 =====": "",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "===== 유틸리티 =====": "",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces 2>/dev/null || true",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^9.1.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "playwright": "^1.56.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.17"
  }
}
