{
  "name": "@portal/shopping-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Shopping microapp for Portal Universe",
  "scripts": {
    "dev": "concurrently \"vite build --watch --mode dev\" \"vite preview --port 30002 --strictPort --mode dev\"",
    "build": "tsc --noEmit && vite build",
    "build:dev": "tsc -b && vite build --mode dev",
    "build:docker": "tsc -b && vite build --mode docker",
    "build:k8s": "tsc -b && vite build --mode k8s",
    "preview": "vite preview --port 30002 --strictPort"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@portal/design-system-react": "*",
    "@portal/design-tokens": "*",
    "@portal/react-bridge": "*",
    "axios": "^1.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.1.5",
    "zod": "^4.3.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.9.3",
    "vite": "^7.2.0"
  }
}
