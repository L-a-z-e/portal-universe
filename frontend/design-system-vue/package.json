{
  "name": "@portal/design-system-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/design-system.css",
    "./tailwind.preset.js": "./tailwind.preset.js"
  },
  "files": [
    "dist",
    "tailwind.config.js",
    "tailwind.preset.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "preview": "vite preview --port 30003 --strictPort",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@portal/design-tokens": "*",
    "@fontsource-variable/inter": "^5.1.1",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/vue3-vite": "^9.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.8.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.20",
    "happy-dom": "^20.3.1",
    "postcss": "^8.4.49",
    "postcss-import": "^14.1.0",
    "storybook": "^9.1.13",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.0.7"
  }
}
