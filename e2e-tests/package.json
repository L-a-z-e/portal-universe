{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Portal Universe E2E Tests",
  "scripts": {
    "test": "playwright test",
    "test:fast": "playwright test --project=setup --project=chromium --project=admin-auth-setup --project=admin-chromium --project=admin-frontend",
    "test:all-browsers": "ALL_BROWSERS=true playwright test",
    "test:chromium": "playwright test --project=setup --project=chromium",
    "test:firefox": "playwright test --project=setup --project=firefox",
    "test:webkit": "ALL_BROWSERS=true playwright test --project=setup --project=webkit",
    "test:mobile": "ALL_BROWSERS=true playwright test --project=setup --project=mobile-chrome",
    "test:portal": "playwright test tests/portal-shell/",
    "test:blog": "playwright test tests/blog/",
    "test:shopping": "playwright test tests/shopping/",
    "test:prism": "playwright test tests/prism/",
    "test:admin-frontend": "playwright test tests/admin-frontend/",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:30000"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  }
}
